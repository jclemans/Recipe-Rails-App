<h1>Edit Ingredient</h1>

<form action="/recipes/<%= @recipe.slug_name %>/ingredients/<%= @ingredient.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="ingredient_name">Ingredient</label>
  <input id="ingredient_name" name="ingredient[name]" type="text">
  <button>Update Ingredient</button>
</form>

<p><a href="/recipes/<%= @recipe.slug_name %>/ingredients/<%= @ingredient.id %>"
  data-confirm="You sure?"
  data-method="delete"
  rel="nofollow"><button>Delete Ingredient</button></a></p>
