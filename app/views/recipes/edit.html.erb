<div class="container">

  <h1>Edit your recipe</h1>

  <a href="/recipes/<%= @recipe.slug_name %>"><button class="btn btn-primary">Back</button></a>
  <h3>Recipe Name</h3>
  <form action="/recipes/<%= @recipe.slug_name %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="recipe_name">Recipe</label>
    <input id="recipe_name" name="recipe[name]" type="text" value="<%= @recipe.name %>">
    <input id="slug_name" name="recipe[slug_name]" type="hidden" value="<%= @recipe.slug_name %>">
    <button class="btn btn-primary">Update Recipe</button>
    <p><a href="/recipes/<%= @recipe.slug_name%>"
    data-confirm="You sure?"
    data-method="delete"
    rel="nofollow"><button class="btn btn-danger">Delete Recipe</button></a></p>
  </form>

  <h3>Ingredients</h3>

  <form action="/recipes/<%= @recipe.slug_name %>/ingredients" method="post">
    <label for="ingredient_name">Ingredient</label>
    <input id="ingredient_name" name="ingredient[name]" type="text">
    <button class="btn btn-primary">Add Ingredient</button>
  </form>

  <ul>
    <% @ingredients_sorted.each do |ingredient| %>
      <li>
        <span>
          <%= ingredient.name %>
        </span>
        <span>
          <a href="/recipes/<%= @recipe.slug_name %>/ingredients/<%= ingredient.id %>"><button>Edit</button></a>
        </span>
        <span>
          <a href="/recipes/<%= @recipe.slug_name%>/ingredients/<%= ingredient.id %>"
            data-confirm="You sure?"
            data-method="delete"
            rel="nofollow"><button>Delete</button></a>
        </span>
      </li>
    </br>
    <% end %>
  </ul>


</div>

<div class="container">
<div class="row">
  <a href="/recipes">| Return to Recipes Home |</a></div>
</div>
